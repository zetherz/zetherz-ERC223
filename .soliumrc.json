{
  "extends": "solium:all",
  "plugins": ["security"],
  "rules": {
    "quotes": ["error", "double"],
    "no-empty-blocks": "off",
    "indentation": ["error", 2],
    "arg-overflow": "off",
    "no-constant": ["error"],
    "security/enforce-explicit-visibility": ["error"],
    "security/no-block-members": ["warning"],
    "security/no-inline-assembly": ["off"]
  }
}
